# Git
.git
.gitignore
.gitattributes

# IDE/Editor
.idea
.vscode
*.swp
*.swo
.editorconfig

# Node modules (rebuilt in Docker)
node_modules
npm-debug.log
yarn-error.log

# Vendor (rebuilt in Docker)
vendor

# Testing
.phpunit.result.cache
phpunit.xml
tests
coverage

