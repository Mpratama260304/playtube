# ============================================
# PlayTube Environment Variables for Docker
# ============================================
# Copy this file to .env and update the values
# ============================================

# Application
APP_NAME=PlayTube
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=http://localhost:8080
APP_PORT=8080

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Database (SQLite - default)
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=database

# Filesystem
FILESYSTEM_DISK=public

# Mail (optional - configure if needed)
MAIL_MAILER=log
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@playtube.local"
MAIL_FROM_NAME="${APP_NAME}"

# DockerHub (for deployment)
DOCKER_USERNAME=your-dockerhub-username
IMAGE_NAME=playtube
IMAGE_TAG=latest
